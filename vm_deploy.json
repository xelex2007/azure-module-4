{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { 
      "namecomp" : {
        "type" : "string",
        "defaultvalue" : "srviis01"
      },
      "publicipname" : {
        "type" : "string"
      },
      "vnetname" : {
        "type" : "string"
      },
      "adminname" : {
        "type" : "string"
      },
      "nameofvault" : {
        "type" : "string"
      },
      "securestring" : {
        "type" : "securestring"
      },
      "adminpass" : {
        "reference": {
          "keyVault": {
            "id": "[concat(parameters('securestring'),parameters('nameofvault'))]"
          },
          "secretName": "[parameters('adminname')]"
        }
    },
      "subnetname" : {
        "type" : "string"
      }

    },
    "variables": {  },
    "functions": [  ],
    "resources": [ 
        {
            "name": "[parameters('namecomp')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            
            "properties": {
              "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "subnet": {
                            "id": "[parameters('subnetname')]"
                        },
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIpAddress": {
                            "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicipname'))]"
                        }
                    }
                }
            ],
              "hardwareProfile": {
                "vmSize": "Standard_D2s_v3"
              },
              "storageProfile": {
               
                "osDisk": {
                  "osType": "Windows",
                  
                  "name": "mydisk",
                 
                  "createOption": "Attach",
                  "diskSizeGB": 50
                  
                },
                "dataDisks": [
                  {
                    "lun": 1,
                    "name": "disk1",
                    "createOption": "Attach",
                    "diskSizeGB": 50
                  }
                ]
              },
              
              "osProfile": {
                "computerName": "[parameters('namecomp')]",
                "adminUsername": "[parameters('adminname')]",
                "adminPassword": "[parameters('adminpass')]",
                "windowsConfiguration": {
                  "provisionVMAgent": false,
                  "enableAutomaticUpdates": false
                }
                
               
              
              },
              "networkProfile": {
                "networkInterfaces": [
                  {
                    "id": "[parameters('vnetname')]",
                    "properties": {
                      "primary": true
                    }
                  }
                ]
              }
            }
          }
     ],
    "outputs": {  }
}