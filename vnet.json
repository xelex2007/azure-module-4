{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultvalue" : "myvnet01"
            
        },
       
        "location": {
            "type": "string",
            "defaultvalue": "westeurope"
           
        },
        "addressPrefix": {
            "type": "string",
            "defaultvalue": "10.0.0.0/16"
            
        },
        "subnetNameBack": {
            "type": "string",
            "defaultvalue": "back-end"
            
        },
        "subnetNameFront": {
            "type": "string",
            "defaultvalue": "front-end"
            
        },
        "subnetAddressPrefixFront": {
            "type": "string",
            "defaultvalue": "10.0.0.0/24"
            
        },
        "subnetAddressPrefixBack": {
            "type": "string",
            "defaultvalue": "10.0.1.0/24"
           
        },
        "enableDdosProtection": {
            "type": "bool",
            "defaultvalue": false
            
        },
        "publicipaddressname" : {
            "type" : "string",
            "defaultvalue" : "mypublicip"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetNameFront')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressPrefixFront')]"
                        }
                    },
                    {
                        "name": "[parameters('subnetNameBack')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressPrefixBack')]"
                        }
                    }
                ],
                "enableDdosProtection": "[parameters('enableDdosProtection')]"
            }
        },
        {
            "name": "[parameters('publicipaddressname')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            
            
            "properties": {
              "publicIPAllocationMethod": "Dynamic",
              "publicIPAddressVersion": "IPv4"
            },
            "dependson" : []
          }

    ],
    "outputs": {
        "publicipname": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicipaddressname'))]"
        },
        "vnetname" : {
            "type" : "string",
            "value" : "[resourceId('Microsoft.Network/virtualNetworks', parameters('name'))]"
        },"subnetname" : {
            "type" : "string",
            "value" : "[parameters('subnetNameFront')]"
        }
    }
}