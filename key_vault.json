{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { 
        "nameofvault" : {
            "type" : "string",
            "defaultvalue" : "vault76"
        },
        "location" : {
            "type" : "string",
            "defaultvalue" : "westeurope"
        },
        
        "tenantId" : {
            "type" : "string",
            "defaultvalue" : "a8175d3c-262d-4d5c-bbff-cdf43cd4918b"
        },
        "typekeyvault" : {
            "type" : "string",
            "defaultvalue" : "standard"
        },
        "userid" : {
            "type" : "string",
            "defaultvalue" : "c886c48d-fb25-41d2-95c4-690f63a28ed5"
        },
        "secretname" : {
            "type" : "string",
            "defaultvalue" : "admin2018"
        },
        "secretvalue" : {
          "type" : "securestring",
          "defaultvalue" : "asljkehfiouha34D"
        }
       
     },
    "variables": {  },
    "functions": [  ],
    "resources": [ 
        {
            "name": "[parameters('nameofvault')]",
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2018-02-14",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
              "tenantId": "[parameters('tenantId')]",
              "sku": {
                "family": "A",
                "name": "[parameters('typekeyvault')]"
              },
              "accessPolicies": [
                {
                  "tenantId": "[parameters('tenantId')]",
                  "objectId": "[parameters('userid')]",
                  "permissions": {
                    "keys": [
                      "all"
                    ],
                    "secrets": [
                      "all"
                    ],
                    "certificates": [
                      "all"
                    ],
                    "storage": [
                      "all"
                    ]
                  }
                }
              ]
             
            }
          },
          
            
              {
                "name": "[concat(parameters('nameofvault'),'/',parameters('secretname'))]",
                "type": "Microsoft.KeyVault/vaults/secrets",
                "apiVersion": "2018-02-14",
                "properties": {
                  "value": "[parameters('secretvalue')]",
                  
                  "attributes": {
                  "enabled": true
                  
                },
                "dependsOn": [
                  "[parameters('nameofvault')]"
                ]
               
              }
            }
        
     ],
     "outputs": { 
         "nameofvault" : {
             "type" : "string",
             "value" : "[parameters('nameofvault')]"
           }
        }
   
}